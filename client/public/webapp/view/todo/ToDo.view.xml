<mvc:View 
	xmlns:mvc="sap.ui.core.mvc" 
	xmlns="sap.m"
    xmlns:t="sap.ui.table"
	controllerName="de.hms.controller.todo.ToDo">
    <Page
    title="ToDo List">
        <subHeader>
            <Toolbar>
                <SearchField
                    id="searchTodoItemsInput"
                    liveChange=".onSearch"
                    width="100%"/>
            </Toolbar>
        </subHeader>
        <content>
            <Table id="ToDoTable" items="{ path: '/' }">
                <columns>
			        <Column>
			        	<Text text="{i18n>listTodo}" />
			        </Column>
			        <Column>
			        	<Text text="{i18n>toDoInsert}" />
			        </Column>
			        <Column>
			        	<Text text="{i18n>toDoEndDate}" />
			        </Column>

                </columns>
		        <items>
			        <ColumnListItem press="onListItemPressed">
				        <cells>
                            <Text text="{title}"/>
                            <Text text="{completed}"/>
				        </cells>
			        </ColumnListItem>
		        </items>
            </Table>
        </content>
    </Page>
</mvc:View>